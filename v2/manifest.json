{
  "name": "Extension Manager with Profiles",
  "description": "Manage your addons on multiple profiles from a toolbar panel",
  "author": "Richard Neomy",
  "version": "0.1.2",
  "manifest_version": 2,
  "permissions": [
    "storage",
    "notifications",
    "management"
  ],
  "browser_action": {
    "default_icon": {
      "16": "data/icons/16.png",
      "19": "data/icons/19.png",
      "32": "data/icons/32.png",
      "38": "data/icons/38.png",
      "48": "data/icons/48.png"
    },
    "default_popup": "data/panel/index.html"
  },
  "background": {
    "persistent": false,
    "scripts": [
      "background.js"
    ]
  },
  "homepage_url": "https://add0n.com/addon-manager.html",
  "options_ui": {
    "page": "data/options/index.html",
    "chrome_style": true
  },
  "icons": {
    "16": "data/icons/16.png",
    "19": "data/icons/19.png",
    "32": "data/icons/32.png",
    "38": "data/icons/38.png",
    "48": "data/icons/48.png",
    "64": "data/icons/64.png",
    "128": "data/icons/128.png",
    "256": "data/icons/256.png"
  }
}
